# IshYar Frontend Environment Configuration
# Copy this file to .env and adjust values as needed

# API Base URL (Laravel backend)
NUXT_PUBLIC_API_BASE=http://localhost:8000/api/v1

# App Name (displayed in UI)
NUXT_PUBLIC_APP_NAME=IshYar

# Default Locale (en or fa)
NUXT_PUBLIC_DEFAULT_LOCALE=fa

# Reverb (WebSocket)
NUXT_PUBLIC_REVERB_APP_KEY=local
NUXT_PUBLIC_REVERB_HOST=127.0.0.1
NUXT_PUBLIC_REVERB_PORT=8080
NUXT_PUBLIC_REVERB_SCHEME=http
