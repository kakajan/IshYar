# ============================================
# IshYar - Enterprise WorkSuite
# .gitignore for Laravel + Nuxt Monorepo
# ============================================

# ==========================================
# Laravel Backend (backend/)
# ==========================================

# Laravel specific
backend/vendor/
backend/node_modules/
backend/.env
backend/.env.backup
backend/.env.production
backend/.phpunit.result.cache
backend/Homestead.json
backend/Homestead.yaml
backend/auth.json
backend/npm-debug.log
backend/yarn-error.log

# Laravel storage
backend/storage/*.key
backend/storage/app/*
backend/storage/framework/cache/*
backend/storage/framework/sessions/*
backend/storage/framework/views/*
backend/storage/logs/*
!backend/storage/app/.gitkeep
!backend/storage/app/public/.gitkeep
!backend/storage/framework/.gitkeep
!backend/storage/framework/cache/.gitkeep
!backend/storage/framework/cache/data/.gitkeep
!backend/storage/framework/sessions/.gitkeep
!backend/storage/framework/testing/.gitkeep
!backend/storage/framework/views/.gitkeep
!backend/storage/logs/.gitkeep

# Laravel compiled
backend/public/hot
backend/public/storage
backend/public/build/
backend/bootstrap/cache/*
!backend/bootstrap/cache/.gitkeep

# Filament
backend/public/css/filament/
backend/public/js/filament/

# ==========================================
# Nuxt Frontend (frontend/)
# ==========================================

# Nuxt build output
frontend/.nuxt/
frontend/.output/
frontend/dist/
frontend/node_modules/

# Nuxt env
frontend/.env
frontend/.env.*
!frontend/.env.example

# Nitro
frontend/.nitro/
frontend/.cache/

# ==========================================
# Modules (modules/)
# ==========================================

modules/*/vendor/
modules/*/node_modules/
modules/*/.env

